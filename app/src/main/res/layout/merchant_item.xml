<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ripple_retangle_bg"
    android:orientation="horizontal"
    android:paddingRight="20dp">

    <RelativeLayout
        android:id="@+id/merchant_img_rl"
        android:layout_width="104dp"
        android:layout_height="93dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/merchant_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">


        <RelativeLayout
            android:id="@+id/merchant_name_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp">

            <TextView
                android:id="@+id/merchant_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="null"
                android:textSize="14sp"
                android:textColor="@color/buseness_black" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/merchant_introduce_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/merchant_name_rl"
            android:paddingLeft="12dp">

            <TextView
                android:id="@+id/merchant_introduce_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="10dp"
                android:text="null"
                android:textSize="12sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/merchant_stars_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/merchant_introduce_rl"
            android:layout_marginTop="5dp"
            android:paddingLeft="13dp">


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/merchant_stars_rl"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="12dp">

            <TextView
                android:id="@+id/merchant_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="null"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/merchant_road"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/merchant_area"
                android:text="@string/contact_merchant"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/merchant_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="@string/distance"
                android:textSize="11sp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>