<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/homeLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:weightSum="1">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/orange"
        android:clipToPadding="true"
        android:paddingTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/home_position_rl"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/home_position"
                android:layout_width="35dp"

                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"

                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="@string/position"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/home_position_img"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/home_position"
                android:scaleType="fitCenter"
                android:src="@mipmap/position" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_search_txt"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="5"
            android:background="@mipmap/search_frame"
            android:padding="5dp">

            <ImageView
                android:id="@+id/home_search_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/home_search_img"
                android:text="@string/home_search_hint" />
            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:background="@color/white"/>-->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_QuickMark_rl"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/scan" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_personal_rl"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/user_img" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/home_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/home_action_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/white"
                android:gravity="center">

                <com.yiwucheguanjia.carmgr.MyGridView
                    android:id="@+id/business_gridview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="20px"
                    android:numColumns="5"
                    android:verticalSpacing="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/recommend_1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/testimg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/recommend_2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/testimg" />

                    <ImageView
                        android:id="@+id/recommend_3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="2dp"
                        android:src="@mipmap/testimg" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <com.yiwucheguanjia.carmgr.MyGridView
                    android:id="@+id/second_hand_gridview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="3dp"
                    android:numColumns="2"
                    android:verticalSpacing="3dp" />
            </LinearLayout>

            <!--热门二手车-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp">

                    <TextView
                        android:id="@+id/home_hot_second_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="@string/hot_second_car"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/home_more_second_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/home_more_second_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/read_mord"
                            android:textColor="#000000"
                            android:textSize="10sp" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/go" />

                    </LinearLayout>

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/id_recyclerview_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:scrollbars="none"></android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <!--热闹推荐-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp">

                    <TextView
                        android:id="@+id/hot_recommend_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="@string/hot_recommend"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/home_more_reco_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/hot_recommend_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/read_mord"
                            android:textSize="10sp" />

                        <ImageView
                            android:id="@+id/recommend_more_img"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/go" />
                    </LinearLayout>
                </RelativeLayout>

                <com.yiwucheguanjia.carmgr.utils.MyListView
                    android:id="@+id/home_hot_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
