<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/detail_rate_user_rl"
            android:layout_width="60dp"
            android:layout_height="66dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/detail_merchant_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingLeft="8dp">


            <RelativeLayout
                android:id="@+id/detail_rate_name_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/detail_user_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:text="null"
                    android:textColor="@color/buseness_black"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/detail_merchant_stars_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/detail_rate_star_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/detail_rate_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/detail_rate_star_img"
                    android:textColor="@color/detail_read_more"
                    android:textSize="11sp"/>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>