<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/orange"
        android:clipToPadding="true"
        android:paddingTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/home_position_rl"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/home_position"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/position"
                android:textSize="14sp"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/home_position_img"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/home_position"
                android:scaleType="fitCenter"
                android:src="@mipmap/position" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_search_txt"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="5"
            android:background="@mipmap/search_frame"
            android:padding="5dp">

            <ImageView
                android:id="@+id/home_search_img"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:src="@mipmap/search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/home_search_img"
                android:text="@string/home_search_hint"
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_QuickMark_rl"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/scan" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_personal_rl"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/user_img" />
        </RelativeLayout>
    </LinearLayout>


        <RelativeLayout
            android:id="@+id/callyiwu_call_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <ImageView
                android:id="@+id/callyiwu_call"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/call" />

            <TextView
                android:id="@+id/callyiwu_call_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/callyiwu_call"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/call_yiwu" />

        </RelativeLayout>
</LinearLayout>