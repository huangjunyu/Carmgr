<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yiwucheguanjia.carmgr.my.CarBrandActivity">
    <RelativeLayout
        android:id="@+id/brand_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="1px"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/brand_goback_rl"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            >

            <ImageButton
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@mipmap/register_left_pre" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:clickable="true"
            android:text="@string/brand"
            android:textColor="@color/gray_default"
            android:textSize="16sp" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/brand_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brand_bar">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
