<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:id="@+id/enter_title_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/enter_data_goback_rl"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">

            <ImageButton
                android:id="@+id/enter_goback_imgbtn"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@mipmap/goback" />
        </RelativeLayout>

        <TextView
            android:id="@+id/publishTopicBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:clickable="true"
            android:text="@string/enter"
            android:textColor="@color/gray_default"
            android:textSize="17sp" />
    </RelativeLayout>
    <!-- 底部tab -->
    <LinearLayout
        android:id="@+id/ll_bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_title_rl"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <TextView
                android:id="@+id/enter_operate_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/operator_data"
                android:textSize="16sp"
                android:textColor="@color/orange"
                />
            <ImageView
                android:id="@+id/enter_merchant_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/enter_operate_data"
                android:src="@mipmap/register_right_pre"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <TextView
                android:id="@+id/enter_merchant_data_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/merchant_data"
                android:textSize="16sp"
                android:textColor="@color/gray_default"
                />
            <ImageView
                android:id="@+id/merchant_data_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/enter_merchant_data_tv"
                android:src="@mipmap/register_right_nor"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/enter_jion_data_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/join_data"
                android:textSize="16sp"
                android:textColor="@color/gray_default"
                />
            <!--<ImageView-->
            <!--android:id="@+id/register_three_img"-->
            <!--android:layout_width="15dp"-->
            <!--android:layout_height="15dp"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_toRightOf="@+id/register_setting_pwd"-->
            <!--android:src="@mipmap/register_right_nor"/>-->
        </RelativeLayout>

    </LinearLayout>

    <!-- 内容部分， fragment切换 -->

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_bottom_tab"
        android:orientation="vertical"></LinearLayout>

</RelativeLayout>
