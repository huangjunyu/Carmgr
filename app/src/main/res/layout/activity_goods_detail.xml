<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".merchant_detail.view.GoodsDetailActivity">

    <RelativeLayout
        android:id="@+id/gools_detail_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/goods_detail_goback_rl"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">

            <ImageButton
                android:id="@+id/getpwd_goback_imgbtn"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@mipmap/register_left_pre" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/appointment_service"
            android:textColor="@color/orange"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gools_detail_bar"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/goods_detail_headpicture"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@mipmap/yangmin_test" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/frame_bottom">

            <TextView
                android:id="@+id/goods_detail_vip_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="$9.9"
                android:textColor="@color/blueness"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/goods_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/goods_detail_vip_price"
                android:text="门市价：￥89"
                android:textColor="@color/hint_edit_color" />

            <Button
                android:id="@+id/goods_detail_buy"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@color/orange"
                android:text="@string/buy_now"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_bottom"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/goods_detail_refund"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/yangmin" />

                <TextView
                    android:id="@+id/goods_detail_refund_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/goods_detail_refund"
                    android:text="@string/refund_everytime"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/goods_detail_refund_auto"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/yangmin" />

                <TextView
                    android:id="@+id/goods_detail_refund_auto_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/goods_detail_refund_auto"
                    android:text="@string/refund_timesup"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/goods_detail_saled_total_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/yangmin" />

                <TextView
                    android:id="@+id/goods_detail_saled_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/goods_detail_saled_total_img"
                    android:text="@string/saled"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/goods_detail_saled_total_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_toRightOf="@+id/goods_detail_saled_total"
                    android:text="56"
                    android:textSize="16sp" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_top">

            <TextView
                android:id="@+id/goods_detail_merchant_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/merchant_data" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/goods_detail_merchant_data"
                android:background="@drawable/frame_top"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="4">

                    <TextView
                        android:id="@+id/goods_detail_merchant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="新干线汽车美容维修保养服务连锁机构（天河店）"
                        android:textColor="@color/buseness_black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/goods_detail_merchant_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/goods_detail_merchant_name"
                        android:layout_marginTop="3dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:text="潭村路16号星汇雅苑BDA产业园第二栋首层BFDW109-111室" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/goods_detail_merchant_addr"
                        android:layout_marginTop="3dp">

                        <ImageView
                            android:id="@+id/goods_detail_position_img"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/position" />

                        <TextView
                            android:id="@+id/goods_detail_distance_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/goods_detail_position_img"
                            android:layout_marginLeft="5dp"
                            android:text="85km"
                            android:textSize="12sp" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/yangmin" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@color/gray" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/goods_detail_qppoint_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/orange"
        android:text="预约服务"
        android:textColor="@color/white" />
</RelativeLayout>
