<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:id="@+id/merchant_provider_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/commercial" />

        <TextView
            android:id="@+id/merchant_pay_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:background="@mipmap/round_rectangle_orange_2"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:text="@string/pay_status" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/commercial_rl"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.yiwucheguanjia.carmgr.utils.RoundRectImageView
            android:id="@+id/merchant_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="14dp"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/roundtest"/>
        <TextView
            android:id="@+id/merchant_service_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/merchant_img"
            android:text="服务类型"/>
        <TextView
            android:id="@+id/merchant_operate_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/merchant_service_item"
            android:text="订单操作"
            android:background="@mipmap/round_rectangle_orange_2"/>

        <TextView
            android:id="@+id/merchant_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_toRightOf="@id/merchant_img"
            android:layout_below="@+id/merchant_service_item"
            android:text="订单号"/>
        <TextView
            android:id="@+id/merchant_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/merchant_img"
            android:layout_below="@+id/merchant_order_number"
            android:text="时间"
            />
        <TextView
            android:id="@+id/merchat_urgingProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"

            android:gravity="center"
            android:background="@mipmap/round_rectangle_orange_2"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/merchant_order_time"
            android:text="催进度"/>
    </RelativeLayout>
</LinearLayout>