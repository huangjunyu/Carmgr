<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/merchant_provider_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/commercial" />

        <TextView
            android:id="@+id/merchant_pay_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/pay_status" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/commercial_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.yiwucheguanjia.carmgr.utils.CircularImage
            android:id="@+id/merchant_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"/>
        <TextView
            android:id="@+id/merchant_service_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/merchant_img"
            android:text="服务类型"/>
        <TextView
            android:id="@+id/merchant_operate_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/merchant_service_type"
            android:text="订单操作"/>

        <TextView
            android:id="@+id/merchant_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/merchant_img"
            android:layout_below="@+id/merchant_service_type"
            android:text="订单号"/>
        <TextView
            android:id="@+id/merchant_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/merchant_img"
            android:layout_below="@+id/merchant_order_number"
            android:text="时间"
            />
        <TextView
            android:id="@+id/merchat_urgingProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/merchant_order_time"
            android:text="催进度"/>
    </RelativeLayout>
</LinearLayout>