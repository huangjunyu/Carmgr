<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rate_user_rl"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:padding="20dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/complain_user_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:src="@mipmap/defualt_header" />

        <TextView
            android:id="@+id/complain_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/complain_user_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/buseness_black"
            android:textSize="14sp"
            tools:text="136666666"
            />
        <TextView
            android:id="@+id/complain_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/complain_user_name_tv"
            android:layout_centerVertical="true"
            tools:text="2016.8.8"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/complain_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        tools:text="评论内容"
        android:background="@color/white"
        />
</LinearLayout>