<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".merchant_detail.view.GoodsDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/goods_detail_goback_rl"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">

            <ImageButton
                android:id="@+id/getpwd_goback_imgbtn"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@mipmap/register_left_pre" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/appointment_service"
            android:textColor="@color/orange"
            android:textSize="18sp" />
    </RelativeLayout>
    <Button
        android:id="@+id/goods_detail_qppoint_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:text="预约服务"/>
</RelativeLayout>
